{
  "name": "ble-wearables",
  "version": "1.0.0",
  "description": "Cross-platform BLE library for connecting to wearable devices based on Gadget Bridge protocols",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.esm.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf lib",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "bluetooth",
    "ble",
    "wearables",
    "miband",
    "xiaomi",
    "gadgetbridge",
    "react-native",
    "expo",
    "health",
    "fitness"
  ],
  "author": "QVAC Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "react-native-ble-plx": "^3.1.2",
    "react-native-crypto": "^2.2.0",
    "react-native-randombytes": "^3.6.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^19.1.9",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "react-native": {
    "crypto": false,
    "stream": false
  }
}
